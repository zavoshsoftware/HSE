@model Models.RiskMatris

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

<h2>افزودن @Html.DisplayNameFor(model => model)</h2>

@using (Html.BeginForm("Create", "RiskMatris",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)

        <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(model => model.RiskNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.RiskNumber)

                @Html.ValidationMessageFor(model => model.RiskNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RiskProbabilityId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RiskProbabilityId", String.Empty)
                @Html.ValidationMessageFor(model => model.RiskProbabilityId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RiskIntensityId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RiskIntensityId", String.Empty)
                @Html.ValidationMessageFor(model => model.RiskIntensityId)
            </div>
        </div>

        <div class="form-group">
			<div class="col-md-2">
            </div>
            <div class="col-md-10">
                    @Html.EditorFor(model => model.IsActive)

				@Html.LabelFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.Description)

                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
        </div>
</div>
}

