@model IEnumerable<Models.Report>

 

<h2>@ViewBag.Title</h2>
<p class="alert alert-info">
	جهت دانلود فایل نمونه <a href="@ViewBag.sampleFile">اینجا</a> را کلیک کنید.
</p>
        @(Html.Kendo().Grid(Model)
									.Name("Grid")
									.Columns(columns =>
									{
									columns.Bound(model => model.ReportDate);
									columns.Bound(model => model.Status.Title).Title("وضعیت گزارش");
									columns.Bound(model => model.CreationDate);
									columns.Bound(item => @item.Id).Title("دانلود فایل").Filterable(false).Groupable(false)
										.Template(@<text>
											         <a href="@item.FileUrl">دانلود</a>
											         
										           </text>).Width(200);
										columns.Bound(item => @item.Id).Title("دانلود فایل").Filterable(false).Groupable(false)
									.Template(@<text>
							
				@if (ViewBag.roleName == "company")
				{
					@Html.ActionLink("حذف", "Delete", new {id = @item.Id}, new {@class = "k-button"})
				}
									</text>).Width(200);  
		})
		.ToolBar(toolbar =>
		{
			if (ViewBag.roleName == "company")
			{
				toolbar.Custom().Action("Create", "Reports").Text("افزودن");
			}
		}
	          )         
		.DataSource(dataSource => dataSource
									.Server()
							
									.Model(model => model.Id(item => item.Id))
					)              
	)
