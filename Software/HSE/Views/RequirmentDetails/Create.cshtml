@model Models.RequirmentDetail
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm("Create", "RequirmentDetails",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
	@Html.AntiForgeryToken()
    
	<div class="form-horizontal">        
		@Html.ValidationSummary(true)

		<div class="form-group">
			<div class="form-group">
				@Html.LabelFor(model => model.ProgressPercent, new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.ProgressPercent)

					@Html.ValidationMessageFor(model => model.ProgressPercent)
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.ProgressAmount, new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.ProgressAmount)

					@Html.ValidationMessageFor(model => model.ProgressAmount)
				</div>
			</div>
 

			<div class="form-group" id="buttons">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="ایجاد" class="btn btn-primary" />
					@Html.ActionLink("بازگشت به فهرست", "Index")
				</div>
			</div>
		</div>
	</div>
}
