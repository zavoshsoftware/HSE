@model IEnumerable<Models.CompanyStatusReport>

@{
ViewBag.Title = "فهرست صورت وضعیت های HSE" ;
    
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

        @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                          columns.Bound(model => model.Company.Title);
        columns.Bound(model => model.Title);
        columns.Bound(model => model.CreationDate);
					columns.Bound(item => @item.Id).Title("دستورات").Filterable(false).Groupable(false)
						.Template(@<text>
							          <a target="_blank" href="../../@item.FileUrl" class = "k-button">دانلود</a>
							  
						           </text>).Width(200);  
		})
	        
		.DataSource(dataSource => dataSource
									.Server()
							
									.Model(model => model.Id(item => item.Id))
					)              
	)
