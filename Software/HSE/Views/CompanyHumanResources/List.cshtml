@model IEnumerable<Models.Company>

@{
ViewBag.Title = "فهرست شرکت های پیمانکار" ;
    
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

        @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                            columns.Bound(model => model.Title);
      
					columns.Bound(item => @item.Id).Title("دستورات").Filterable(false).Groupable(false)
							.Template(@<text>
								          @Html.ActionLink("مشاهده منابع انسانی", "IndexAdmin", new {id = @item.Id}, new {@class = "k-button"})
													<a href="@item.ChartFileUrl" target="_blank">دانلود چارت سازمانی</a>
									</text>).Width(200);  
		})
		.ToolBar(toolbar =>
					{				
						toolbar.Custom().Action("Create","HsePlans").Text("افزودن");                          
					}
		)         
		.DataSource(dataSource => dataSource
									.Server()
							
									.Model(model => model.Id(item => item.Id))
					)              
	)
