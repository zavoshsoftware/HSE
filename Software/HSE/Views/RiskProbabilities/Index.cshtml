@model IEnumerable<Models.RiskProbability>

@{
ViewBag.Title = "فهرست " ;
    
}

<h2>@ViewBag.Title</h2>

        @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                            columns.Bound(model => model.Title);
        columns.Bound(model => model.Level);
        columns.Bound(model => model.Summery);
        columns.Bound(model => model.Summery2);
        columns.Bound(model => model.IsActive);
        columns.Bound(model => model.CreationDateStr);
        columns.Bound(model => model.LastModifiedDate);
        columns.Bound(model => model.Description);
					columns.Bound(item => @item.Id).Title("دستورات").Filterable(false).Groupable(false)
							.Template(@<text>
									@Html.ActionLink("ویرایش", "Edit", new {id = @item.Id}, new {@class = "k-button"})
									@Html.ActionLink("حذف", "Delete", new {id = @item.Id}, new {@class = "k-button"})
									</text>).Width(200);  
		})
		.ToolBar(toolbar =>
					{				
						toolbar.Custom().Action("Create","RiskProbabilities").Text("افزودن");                          
					}
		)         
		.DataSource(dataSource => dataSource
									.Server()
							
									.Model(model => model.Id(item => item.Id))
					)              
	)
