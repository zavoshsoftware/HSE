@model IEnumerable<Models.HsePlan>

@{
ViewBag.Title = "فهرست HSE Plan" ;
    
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

        @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                            columns.Bound(model => model.Company.Title);
        columns.Bound(model => model.User.FullName);
        columns.Bound(model => model.SupervisorComment);
        columns.Bound(model => model.CreationDate);
					columns.Bound(item => @item.Id).Title("دستورات").Filterable(false).Groupable(false)
						.Template(@<text>
							          
				@{
						var identity = (System.Security.Claims.ClaimsIdentity)User.Identity;
						string roleName = identity.FindFirst(System.Security.Claims.ClaimTypes.Role).Value;
						if (roleName == "supervisor")
						{
								@Html.ActionLink("ثبت نظر ناظر", "SupervisorComment", new { id = @item.Id }, new { @class = "k-button" })
								}
				}
							          <a href="@item.FileUrl" target="_blank">دانلود</a>
						           </text>).Width(200);  
		})         
		.DataSource(dataSource => dataSource
									.Server()
							
									.Model(model => model.Id(item => item.Id))
					)              
	)
