@model IEnumerable<Models.Relation>

@{
		ViewBag.Title = "فهرست ";

		Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@(Html.Kendo().Grid(Model)
				.Name("Grid")
				.Columns(columns =>
				{
				columns.Bound(model => model.RelationType.Title);
				columns.Bound(model => model.Title);
				columns.Bound(model => model.IsActive);
				columns.Bound(model => model.CreationDate);
				columns.Bound(item => @item.Id).Title("دستورات").Filterable(false).Groupable(false)
									.Template(@<text>
											@if (ViewBag.role == "Administrator")
											{
												@Html.ActionLink("ویرایش", "Edit", new {id = @item.Id}, new {@class = "k-button"})
												@Html.ActionLink("حذف", "Delete", new {id = @item.Id}, new {@class = "k-button"})
}
											else
											{
													@Html.ActionLink("مشاهده", "details", new { id = @item.Id }, new { @class = "k-button" })

											}
									</text>).Width(200);
				})
				.ToolBar(toolbar =>
				{
					if (ViewBag.role == "Administrator")
					{
						toolbar.Custom().Action("Create", "Relations").Text("افزودن");
					}
				}
				)
				.DataSource(dataSource => dataSource
																		.Server()

																		.Model(model => model.Id(item => item.Id))
										)
)
