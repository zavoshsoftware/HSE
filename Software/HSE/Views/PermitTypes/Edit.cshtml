@model Models.PermitType

@{
    ViewBag.Title = "ویرایش " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "PermitTypes",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.FileUrl)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

      
	    <div class="form-group">
		    @Html.LabelFor(model => model.CompanyTypeId, new { @class = "control-label col-md-2" })
		    <div class="col-md-10">
			    @Html.DropDownList("CompanyTypeId", String.Empty)
			    @Html.ValidationMessageFor(model => model.CompanyTypeId)
		    </div>
	    </div>
					

	    <div class="form-group">
		    @Html.LabelFor(model => model.FileUrl, new { @class = "control-label col-md-2" })
		    <div class="col-md-10">
			    @Html.Kendo().Upload().Name("fileUpload").Multiple(false)
			    @Html.ValidationMessageFor(model => model.FileUrl)
		    </div>
	    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

	    <div style="display:none">@Html.EditorFor(model => model.CreationDate)</div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
    </div>
}

